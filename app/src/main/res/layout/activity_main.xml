<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_and_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="@dimen/et_text_size"
        app:layout_constraintBottom_toTopOf="@id/btn_discharge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:hint="Результат" />

    <Button
        android:id="@+id/btn_discharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="c"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_plus_or_minus"
        app:layout_constraintStart_toStartOf="@id/input_and_result"
        app:layout_constraintTop_toBottomOf="@id/input_and_result" />

    <Button
        android:id="@+id/btn_plus_or_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="±"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_percent"
        app:layout_constraintStart_toEndOf="@id/btn_discharge"
        app:layout_constraintTop_toBottomOf="@id/input_and_result" />

    <Button
        android:id="@+id/btn_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="%"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_division"
        app:layout_constraintStart_toEndOf="@id/btn_plus_or_minus"
        app:layout_constraintTop_toBottomOf="@id/input_and_result" />

    <Button
        android:id="@+id/btn_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="/"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="@id/input_and_result"
        app:layout_constraintStart_toEndOf="@id/btn_percent"
        app:layout_constraintTop_toBottomOf="@id/input_and_result" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="1"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_two"
        app:layout_constraintStart_toStartOf="@id/input_and_result"
        app:layout_constraintTop_toBottomOf="@id/btn_discharge" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="2"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_three"
        app:layout_constraintStart_toEndOf="@id/btn_one"
        app:layout_constraintTop_toBottomOf="@id/btn_plus_or_minus" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="3"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_multiplication"
        app:layout_constraintStart_toEndOf="@id/btn_two"
        app:layout_constraintTop_toBottomOf="@id/btn_percent" />

    <Button
        android:id="@+id/btn_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="*"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="@id/input_and_result"
        app:layout_constraintStart_toEndOf="@id/btn_three"
        app:layout_constraintTop_toBottomOf="@id/btn_division" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="4"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_five"
        app:layout_constraintStart_toStartOf="@id/input_and_result"
        app:layout_constraintTop_toBottomOf="@id/btn_one" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="5"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_six"
        app:layout_constraintStart_toEndOf="@id/btn_four"
        app:layout_constraintTop_toBottomOf="@id/btn_two" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="6"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_minus"
        app:layout_constraintStart_toEndOf="@id/btn_five"
        app:layout_constraintTop_toBottomOf="@id/btn_three" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="-"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="@id/input_and_result"
        app:layout_constraintStart_toEndOf="@id/btn_six"
        app:layout_constraintTop_toBottomOf="@id/btn_multiplication" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="7"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_eight"
        app:layout_constraintStart_toStartOf="@id/input_and_result"
        app:layout_constraintTop_toBottomOf="@id/btn_four" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="8"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_nine"
        app:layout_constraintStart_toEndOf="@id/btn_seven"
        app:layout_constraintTop_toBottomOf="@id/btn_five" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="9"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintStart_toEndOf="@id/btn_eight"
        app:layout_constraintTop_toBottomOf="@id/btn_six" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="+"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="@id/input_and_result"
        app:layout_constraintStart_toEndOf="@id/btn_nine"
        app:layout_constraintTop_toBottomOf="@id/btn_minus" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="0"
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_comma"
        app:layout_constraintStart_toStartOf="@id/input_and_result"
        app:layout_constraintTop_toBottomOf="@id/btn_seven"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text=","
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toStartOf="@id/btn_equals"
        app:layout_constraintStart_toEndOf="@id/btn_zero"
        app:layout_constraintTop_toBottomOf="@id/btn_nine"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:text="="
        android:textSize="@dimen/btn_text_size"
        app:layout_constraintEnd_toEndOf="@id/input_and_result"
        app:layout_constraintStart_toEndOf="@id/btn_comma"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>